<% layout('/layouts/boilerplate') -%>


<body>
    <form  class="m-3 addform needs-validation" action="/add" method="post" novalidate>
        <div class="mb-3">
            <label class="form-label" for="title">Title</label>
            <input placeholder="Add Title" name="list[title]" class="form-control" id="title" required>
            <div class="invalid-feedback">
                Please Add Title
              </div>
        </div>
          
        <div class="mb-3">
            <label class="form-label" for="description">Description</label>
            <textarea placeholder="Add Description" name="list[description]" class="form-control" id="description" required></textarea>
            <div class="invalid-feedback">
                Please Add Description
              </div>
        </div>
        
        <div class="mb-3">
            <label class="form-label" for="image">Image</label>
            <input placeholder="Add Image URL" name="list[image]" class="form-control" id="image">
        </div>

        <div class="row">
        <div class="mb-3 col-6 col-min-3">
            <label class="form-label" for="country">Country</label>
            <input placeholder="Enter Country" name="list[country]" class="form-control" id="country" required>
            <div class="invalid-feedback">
                Please Add Country
              </div>
        </div>
      
        <div class="mb-3 col-6 col-min-3">
            <label class="form-label" for="location">Location</label>
            <input placeholder="Enter Location" name="list[location]" id="location" class="form-control" required>
            <div class="invalid-feedback">
                Please Add Location
              </div>
        </div>
    </div>
        <div class="mb-3">
            <label class="form-label" for="price">Price</label>
            <input placeholder="Enter Price for per night" name="list[price]" id="price" class="form-control" required>
            <div class="invalid-feedback">
                Please Add Price
              </div>
        </div>
    
        <input class="btn btn-primary" type="submit" value="Add">
    </form>
    <script src="/frontValidation.js"></script>
</body>
